%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Post
      %th User
      %th{colspan: 3}

  %tbody
    - @articles.each do |article|
      %tr{class: cycle('list_line_odd', 'list_line_even') }
        %td= article.title
        %td= article.post
        %td= article.user_id
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }


