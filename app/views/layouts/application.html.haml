<!DOCTYPE html>
%html
  %head>
  %title= yield(:title)
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

  %body
    %div#wrapper
      %header
        = link_to image_tag("Amarok-logo-small.png", alt: "New"), pages_home_path , {:class => 'websiteLogo'}
        = link_to 'READIT', pages_home_path, {:class => 'websiteTitle'}


      %nav#horzNav
        %p
          = link_to 'Home', pages_home_path
          = link_to 'About', pages_about_path
          = link_to 'Directions', pages_directions_path
          = link_to 'Articles', articles_path
          = link_to 'Users', users_path

      #main#content
        = yield